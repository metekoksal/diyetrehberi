<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="diyetrehberi.diyetrehberi.MainController"
            prefHeight="400.0" prefWidth="600.0">

    <children>

        <!-- Ana içerik alanı -->
        <StackPane fx:id="contentPane"
                   AnchorPane.topAnchor="0.0"
                   AnchorPane.bottomAnchor="50.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0">

            <VBox fx:id="homePanel" alignment="CENTER">
                <Label fx:id="nameLabel" text="🏠 Ana Sayfa"/>
            </VBox>

            <VBox fx:id="exercisePanel" alignment="TOP_CENTER" visible="false">
                <HBox spacing="10.0" alignment="TOP_CENTER">
                    <!-- Sol: Dinamik Yemek Seçme Alanı -->
                    <VBox alignment="CENTER" prefWidth="280.0" spacing="10.0">
                        <Label text="💪 Egzersiz Kaydı Ekle" style="-fx-font-size: 16px; -fx-font-weight: bold;" AnchorPane.topAnchor="0.0"/>

                        <!-- Dinamik olarak kodda eklenecek ComboBox -->
                        <ComboBox fx:id="exerciseComboBox" promptText="Egzersiz Seçin" prefWidth="200.0"/>

                        <!-- Porsiyon girişi -->
                        <VBox spacing="5.0" alignment="TOP_LEFT">
                            <HBox spacing="5.0" alignment="CENTER_LEFT">
                                <Label text="Dakika:"/>
                                <TextField fx:id="durationField" text="1" prefWidth="60.0"/>
                            </HBox>
                            <Label fx:id="caloriesBurnedLabel" text="Yakılan Kalori: 0 kcal"/>
                            <HBox spacing="5.0" alignment="CENTER_LEFT">
                                <Label text = "Yapılan Zaman: "/>

                                <ComboBox fx:id="hourComboBoxExercise" promptText="Saat" prefWidth="65.0"/>
                                <Label text = ":"/>
                                <ComboBox fx:id="minuteComboBoxExercise" promptText="Dk." prefWidth="65.0"/>
                            </HBox>
                        </VBox>

                        <!-- Ekle butonu -->
                        <Button fx:id="addExerciseButton" text="➕ Ekle" onAction="#handleLogExercise"/>
                    </VBox>


                    <!-- Orta Çizgi -->
                    <Pane prefWidth="2.0" style="-fx-background-color: #cccccc;" />

                    <!-- Sağ: Besin Değerleri Özeti -->
                    <VBox alignment="TOP_CENTER" prefWidth="280.0" spacing="10.0">
                        <Label text="📋 Özet" style="-fx-font-size: 16px; -fx-font-weight: bold;" AnchorPane.topAnchor="0.0"/>
                    </VBox>
                </HBox>
            </VBox>

            <VBox fx:id="foodPanel" alignment="TOP_CENTER" visible="false">
                <HBox spacing="10.0" alignment="TOP_CENTER">
                    <!-- Sol: Dinamik Yemek Seçme Alanı -->
                    <VBox alignment="CENTER" prefWidth="280.0" spacing="10.0">
                        <Label text="🍽 Yemek Kaydı Ekle" style="-fx-font-size: 16px; -fx-font-weight: bold;" AnchorPane.topAnchor="0.0"/>

                        <!-- Dinamik olarak kodda eklenecek ComboBox -->
                        <ComboBox fx:id="foodComboBox" promptText="Yemek Seçin" prefWidth="200.0"/>

                        <!-- Porsiyon girişi -->
                        <VBox spacing="5.0" alignment="TOP_LEFT">
                            <HBox spacing="5.0" alignment="CENTER_LEFT">
                                <Label text="Porsiyon:"/>
                                <TextField fx:id="portionField" text="1" prefWidth="60.0"/>
                            </HBox>

                            <Label fx:id="caloriesLabel" text="Kalori: 0 kcal"/>
                            <Label fx:id="carbsLabel" text="Karbonhidrat: 0 g"/>
                            <Label fx:id="proteinLabel" text="Protein: 0 g"/>
                            <Label fx:id="fatLabel" text="Yağ: 0 g"/>

                            <HBox spacing="5.0" alignment="CENTER_LEFT">
                                <Label text = "Yenilen Zaman: "/>

                                <ComboBox fx:id="hourComboBoxMeal" promptText="Saat" prefWidth="65.0"/>
                                <Label text = ":"/>
                                <ComboBox fx:id="minuteComboBoxMeal" promptText="Dk." prefWidth="65.0"/>
                            </HBox>
                        </VBox>



                        <!-- Ekle butonu -->
                        <Button fx:id="addMealButton" text="➕ Ekle" onAction="#handleLogMeal"/>
                    </VBox>


                    <!-- Orta Çizgi -->
                    <Pane prefWidth="2.0" style="-fx-background-color: #cccccc;" />

                    <!-- Sağ: Besin Değerleri Özeti -->
                    <VBox alignment="TOP_CENTER" prefWidth="280.0" spacing="10.0">
                        <Label text="📋 Özet" style="-fx-font-size: 16px; -fx-font-weight: bold;" AnchorPane.topAnchor="0.0"/>
                    </VBox>
                </HBox>
            </VBox>


            <VBox fx:id="profilePanel" alignment="CENTER" visible="false">
                <Label text="👤 Profil"/>

                <!-- Hoşgeldin kısmı -->
                <Label fx:id="userNameLabel" text="Hoşgeldin [Kullanıcı Adı]"/>

                <!-- Yaş, Cinsiyet, Ağırlık ve Uzunluk bilgilerinin gösterilmesi -->
                <Label fx:id="ageLabel" text="Yaş: [Yaş]" />
                <Label fx:id="genderLabel" text="Cinsiyet: [Cinsiyet]" />

                <!-- Ağırlık ve Uzunluk: Etiket ve Input alanları -->
                <HBox alignment="CENTER">
                    <Label text="Ağırlık: " />
                    <Label fx:id="weightLabel" text="XX kg" />
                    <TextField fx:id="weightField" visible="false" promptText="Yeni Ağırlık" />
                    <!-- Replaced 'Düzenle' with a pencil emoji -->
                    <Button fx:id="editWeightBtn" text="📝" onAction="#handleEditWeight"/>
                </HBox>

                <HBox alignment="CENTER">
                    <Label text="Uzunluk: " />
                    <Label fx:id="heightLabel" text="XX cm" />
                    <TextField fx:id="heightField" visible="false" promptText="Yeni Uzunluk" />
                    <!-- Replaced 'Düzenle' with a pencil emoji -->
                    <Button fx:id="editHeightBtn" text="📝" onAction="#handleEditHeight"/>
                </HBox>

            </VBox>

            <VBox fx:id="settingsPanel" alignment="CENTER" visible="false">
                <Label text="⚙ Ayarlar"/>
                <Button text="❌ Kullanıcıyı Sil" onAction="#handleRemoveUser"/>
            </VBox>
        </StackPane>

        <!-- Alt Navigasyon Menüsü -->
        <HBox alignment="CENTER" spacing="15.0"
              style="-fx-background-color: #f0f0f0; -fx-padding: 10px;"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0">
            <Button text="🏠" onAction="#handleHome"/>
            <Button text="💪" onAction="#handleAddExercise"/>
            <Button text="🍽" onAction="#handleAddFood"/>
            <Button text="👤" onAction="#handleProfile"/>
            <Button text="⚙" onAction="#handleSettings"/>
        </HBox>

    </children>
</AnchorPane>
